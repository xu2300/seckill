<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--Configure global properties-->
    <settings>
        <!--Use jdbc getGeneratekeys accessSelf-incrementing primary key value-->
        <setting name="useGeneratedKeys" value="true"/>
        <!--
        Open mybatis will automatically help us to name the table value assigned to the corresponding entity title attribute
        -->
        <setting name="useColumnLabel" value="true"/>

        <!--Turn on camel conversions-->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

</configuration>